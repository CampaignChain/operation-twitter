{% extends 'CampaignChainCoreBundle:Operation:read.html.twig' %}

{% block operation %}
    {% stylesheets '@campaignchain_operation_twitter_css' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}

    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group" role="group" aria-label="...">
            <a href="{{ status.getUrl() }}" target="_blank" class="btn btn-default"><i class="fa fa-external-link"></i> View on Twitter</a>
        </div>
    </div>
    <div id="campaignchain-operation-twitter-update-status">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-twitter"></i></div>
            <div class="panel-body">
            {% if tweet_is_protected %}
                <div class="status">{{ message|campaignchain_make_links|raw }}</div>
            {% else %}
                {{ message|raw }}
            {% endif %}
            </div>
        </div>
    </div>
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group" role="group" aria-label="...">
            <a href="{{ status.getUrl() }}" target="_blank" class="btn btn-default"><i class="fa fa-external-link"></i> View on Twitter</a>
        </div>
    </div>
{% endblock %}

{% block sidebar_operation %}
    {% if tweet_is_protected %}
        <p><i class="fa fa-lock"></i> Protected</p>
    {% else %}
        <p><i class="fa fa-globe"></i> Public</p>
    {% endif %}
{% endblock %}