{% block campaignchain_operation_twitter_update_status_widget %}
    {% spaceless %}
        {% stylesheets '@campaignchain_operation_twitter_css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
        <div id="campaignchain-operation-twitter-update-status">
            <div class="panel panel-default">
                <div class="panel-heading"><i class="fa fa-twitter"></i></div>
                <div class="panel-body">
                    <p>What's happening?</p>
                {{ form_row(form.message, { 'widget_col': 12}) }}
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock %}